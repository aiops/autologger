{
  "name": "log-writer",
  "displayName": "logsight.ai Log Writer",
  "description": "AI powered logging statement writer for Python and all other languages (soon)",
  "version": "1.0.0",
  "publisher": "logsight.ai",
  "license": "Expat",
  "keywords": [
    "logs",
    "python",
    "observability"
  ],
  "repository": {
    "url": "https://github.com/aiops/log-writer"
  },
  "engines": {
    "vscode": "^1.72.0"
  },
  "categories": [
    "Machine Learning",
    "Programming Languages"
  ],
  "activationEvents": [
    "onView:log-writer-sidebar",
    "onCommand:log-writer.write"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "log-writer.write",
        "title": "Generate logging statements"
      }
    ],
    "keybindings": [
      {
        "command": "log-writer.write",
        "key": "cmd+.",
        "mac": "cmd+.",
        "when": "isMac && editorTextFocus && editorLangId =~ /python/ && config.log-writer.hotkey.mac == '⌘ + .'"
      },
      {
        "command": "log-writer.write",
        "key": "alt+.",
        "mac": "alt+.",
        "when": "isMac && editorTextFocus && editorLangId =~ /python/ && config.log-writer.hotkey.mac == '⌥ + .'"
      },
      {
        "command": "log-writer.write",
        "key": "ctrl+.",
        "mac": "ctrl+.",
        "when": "isLinux && editorTextFocus && editorLangId =~ /python/ && config.log-writer.hotkey.window == 'Ctrl + .'"
      },
      {
        "command": "log-writer.write",
        "key": "alt+.",
        "mac": "alt+.",
        "when": "isLinux && editorTextFocus && editorLangId =~ /python/ && config.log-writer.hotkey.window == 'Alt + .'"
      },
      {
        "command": "log-writer.write",
        "key": "ctrl+.",
        "win": "ctrl+.",
        "when": "isWindows && editorTextFocus && editorLangId =~ /python/ && config.log-writer.hotkey.windows == 'Ctrl + .'"
      },
      {
        "command": "log-writer.write",
        "key": "alt+.",
        "win": "alt+.",
        "when": "isWindows && editorTextFocus && editorLangId =~ /python/ && config.log-writer.hotkey.windows == 'Alt + .'"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "when": "editorTextFocus && editorLangId =~ /python/",
          "command": "log-writer.write"
        }
      ]
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "log-writer-sidebar-view",
          "title": "Log writer",
          "icon": "media/favicon.png"
        }
      ]
    },
    "views": {
      "log-writer-sidebar-view": [
        {
          "type": "webview",
          "id": "log-writer-sidebar",
          "name": "",
          "icon": "media/favicon.png",
          "contextualTitle": "logsight.ai Log writer"
        }
      ]
    },
    "configuration": {
      "title": "Logsight.ai Log writer",
      "properties": {
        "log-writer.hotkey.mac": {
          "type": "string",
          "default": "⌘ + .",
          "enum": [
            "⌘ + .",
            "⌥ + ."
          ],
          "enumDescriptions": [
            "Command + .",
            "Option + ."
          ],
          "description": "The hotkey used for generating logs (only for Macs)"
        },
        "log-writer.hotkey.windows": {
          "type": "string",
          "default": "Ctrl + .",
          "enum": [
            "Ctrl + .",
            "Alt + ."
          ],
          "enumDescriptions": [
            "Control + .",
            "Alt + ."
          ],
          "description": "The hotkey used for generating logs (only for Windows/Linux)"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "concurrently \"rollup -c -w\" \"webpack --mode development --watch\"",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^14.0.0",
    "@rollup/plugin-node-resolve": "^8.0.0",
    "@rollup/plugin-typescript": "^6.0.0",
    "@tsconfig/svelte": "^1.0.0",
    "@types/glob": "^8.0.0",
    "@types/mocha": "^10.0.0",
    "@types/node": "16.x",
    "@types/vscode": "^1.72.0",
    "@typescript-eslint/eslint-plugin": "^5.38.1",
    "@typescript-eslint/parser": "^5.38.1",
    "@vscode/test-electron": "^2.1.5",
    "axios": "^0.27.2",
    "concurrently": "^7.5.0",
    "eslint": "^8.24.0",
    "glob": "^8.0.3",
    "mocha": "^10.0.0",
    "rollup": "^2.3.4",
    "rollup-plugin-svelte": "^6.0.0",
    "rollup-plugin-terser": "^7.0.0",
    "svelte": "^3.0.0",
    "svelte-check": "^1.0.0",
    "svelte-preprocess": "^4.0.0",
    "svelte-use-form": "^2.4.3",
    "ts-loader": "^8.0.11",
    "webpack": "^5.74.0",
    "webpack-cli": "^4.10.0"
  }
}
